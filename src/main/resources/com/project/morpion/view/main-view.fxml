          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <bottom>
      <Pane BorderPane.alignment="CENTER" />
   </bottom>
   <center>
      <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <VBox fx:id="chooseGameMode" layoutX="316.0" layoutY="14.0" managed="false" prefHeight="392.0" prefWidth="569.0" visible="false">
               <children>
                  <Label fx:id="title" alignment="CENTER" contentDisplay="CENTER" prefHeight="68.0" prefWidth="570.0" text="Lancement d'une partie" textAlignment="CENTER" style="-fx-text-fill: white">
                     <font>
                        <Font size="30.0" />
                     </font>
                  </Label>
                  <Label fx:id="chooseMode" alignment="TOP_CENTER" prefHeight="113.0" prefWidth="569.0" text="Choisissez un mode de jeu" style="-fx-text-fill: white">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <HBox fx:id="hboxMode" alignment="CENTER" prefHeight="142.0" prefWidth="108.0" spacing="70.0">
                     <children>
                        <Button fx:id="btnSinglePlayer" mnemonicParsing="false" onAction="#chooseDiff" prefHeight="80.0" prefWidth="164.0" text="Singleplayer">
                           <font>
                              <Font size="20.0" />
                           </font>
                        </Button>
                        <Button fx:id="btn1vs1" onAction="#startGame" mnemonicParsing="false" prefHeight="80.0" prefWidth="164.0" text="1vs1">
                           <font>
                              <Font size="20.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox fx:id="playGame" alignment="TOP_CENTER" layoutX="396.0" managed="false" prefHeight="436.0" prefWidth="351.0" visible="false">
               <children>
                  <Label alignment="CENTER" prefHeight="266.0" prefWidth="350.0" text="Morpion" style="-fx-text-fill: white; -fx-font-weight: bold">
                     <VBox.margin>
                        <Insets top="50.0" />
                     </VBox.margin>
                     <font>
                        <Font size="36.0" />
                     </font>
                  </Label>
                   <Button fx:id="play" onAction="#play" prefHeight="80.0" prefWidth="164.0" text="Play">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
             <VBox fx:id="chooseDifficulty" alignment="TOP_CENTER" layoutY="1.0" managed="false" prefHeight="773.0" prefWidth="1200.0" visible="false">
                 <children>
                     <Label alignment="CENTER" prefHeight="250.0" prefWidth="409.0" text="Choose a difficulty" style="-fx-text-fill: white">
                         <font>
                             <Font size="18.0" />
                         </font>
                     </Label>
                     <HBox alignment="CENTER" spacing="80.0">
                         <children>
                             <RadioButton fx:id="easyRadioButton" onAction="#selectDifficulty" prefWidth="64.0" text="Easy" style="-fx-text-fill: white"/>
                             <RadioButton fx:id="mediumRadioButton" onAction="#selectDifficulty" text="Medium" style="-fx-text-fill: white"/>
                             <RadioButton fx:id="hardRadioButton" onAction="#selectDifficulty" text="Hard" style="-fx-text-fill: white"/>
                         </children>
                     </HBox>
                     <Button fx:id="submitBtn" mnemonicParsing="false" onAction="#handleSubmit" prefHeight="43.0" prefWidth="85.0" text="Start">
                     <VBox.margin>
                        <Insets top="60.0" />
                     </VBox.margin></Button>
                 </children>
                 <padding>
                     <Insets bottom="50.0" />
                 </padding>
             </VBox>
         </children>
      </Pane>
   </center>
</BorderPane>
